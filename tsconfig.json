{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": [
      "src",
    ],
    "exclude": [
      "node_modules",
      "**/node_modules/*",
      "dist",
      "__tests__"
    ]
  }
